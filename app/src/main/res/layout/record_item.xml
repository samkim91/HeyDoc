<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFFFF"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"

        >
        <TextView
            android:id="@+id/thesubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="제목"
            android:textSize="20sp"
            android:textColor="@android:color/black"

            />

        <TextView
            android:id="@+id/thedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/thesubject"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="날짜"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/thesection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/thesubject"
            app:layout_constraintLeft_toRightOf="@id/thedate"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="진료과"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/attachnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="첨부파일"
            app:layout_constraintLeft_toRightOf="@id/thesection"
            app:layout_constraintTop_toBottomOf="@id/thesubject"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/thedetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/thedate"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="내용"
            android:textSize="15sp"
            android:textColor="@android:color/black"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>