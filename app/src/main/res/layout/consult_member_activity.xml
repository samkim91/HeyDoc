<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consult.ConsultMember_activity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/consult_member_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/member"
         />

    <Button
        android:id="@+id/add_member"
        android:layout_width="50sp"
        android:layout_height="50sp"
        app:layout_constraintBottom_toTopOf="@id/consultlist"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@drawable/add_person"
        style="?android:attr/borderlessButtonStyle"
        />


    <ImageButton
        android:id="@+id/member"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/consultlist"
        android:src="@drawable/member"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        style="?android:attr/borderlessButtonStyle"

        />

    <ImageButton
        android:id="@+id/consultlist"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/member"
        android:src="@drawable/balloon"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        style="?android:attr/borderlessButtonStyle"

        />

