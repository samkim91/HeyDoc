<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consult_item1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imginconsult"
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/personname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상대방이름"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/imginconsult"
        app:layout_constraintLeft_toRightOf="@id/imginconsult"
        />

    <TextView
        android:id="@+id/sendedtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble1"
        android:text="받은 내용"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:maxWidth="300dp"
        app:layout_constraintTop_toBottomOf="@id/personname"
        app:layout_constraintLeft_toLeftOf="@id/personname"
        />

    <TextView
        android:id="@+id/sendedtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="받은 시간"
        android:textSize="10sp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/sendedtext"
        app:layout_constraintBottom_toBottomOf="@id/sendedtext"


        />

</androidx.constraintlayout.widget.ConstraintLayout>